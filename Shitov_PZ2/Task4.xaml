<Window x:Class="Shitov_PZ2.Task4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 4" Height="350" Width="420">
    <Grid Background="#FFF0FFF6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Задание: Дан массив a[1..n] и число b. Переставить числа в массиве таким образом, чтобы слева от некоторой границы стояли числа, меньшие или равные b, а справа от границы - большие или равные b."
                   TextWrapping="Wrap" Grid.Row="0" Margin="10"/>
        <TextBlock Text="Введите массив чисел через пробел:" Grid.Row="1" Margin="10"/>
        <TextBox x:Name="txtInput" Grid.Row="2" Margin="10"/>
        <TextBlock Text="Введите число b:" Grid.Row="3" Margin="10"/>
        <TextBox x:Name="txtB" Grid.Row="4" Margin="10"/>
        <Button Content="Рассчитать" Grid.Row="5" Margin="10" Click="btnCalculate_Click" Background="#FF678A71"/>
        <TextBlock x:Name="txtResult" Grid.Row="6" Margin="10"/>
    </Grid>
</Window>
