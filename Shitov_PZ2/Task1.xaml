<Window x:Class="Shitov_PZ2.Task1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 1" Height="220" Width="400">
    <Grid Background="#FFF0FFF6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Задание: Вывести на экран число 2n!, n &lt;= 100, n - натуральное." Grid.Row="0" Margin="10"/>
        <TextBlock Text="Введите число n (n &lt;= 100):" Grid.Row="1" Margin="10"/>
        <TextBox x:Name="txtInput" Grid.Row="2" Margin="10"/>
        <Button Content="Рассчитать" Grid.Row="3" Margin="10" Click="btnCalculate_Click" Background="#FF678A71"/>
        <TextBlock x:Name="txtResult" Grid.Row="4" Margin="10"/>
    </Grid>
</Window>