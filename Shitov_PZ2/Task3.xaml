<Window x:Class="Shitov_PZ2.Task3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 3" Height="280" Width="400">
    <Grid Background="#FFF0FFF6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Задание: В заданной последовательности целых чисел найти максимально длинную подпоследовательность чисел такую, что каждый последующий элемент подпоследовательности делился нацело на предыдущий."
                   TextWrapping="Wrap" Grid.Row="0" Margin="10"/>
        <TextBlock Text="Введите последовательность чисел через пробел:" Grid.Row="1" Margin="10"/>
        <TextBox x:Name="txtInput" Grid.Row="2" Margin="10"/>
        <Button Content="Рассчитать" Grid.Row="3" Margin="10" Click="btnCalculate_Click" Background="#FF678A71"/>
        <TextBlock x:Name="txtResult" Grid.Row="4" Margin="10"/>
    </Grid>
</Window>

